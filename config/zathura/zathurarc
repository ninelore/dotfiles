#Zathura config file

#Copy to Clipboard

set selection-clipboard clipboard

#open document in fit-width mode by default
set adjust-open best-fit

#one page per row default
set pages-per-row 1

#stop at page bounderies 
set scroll-page-aware true
set smooth-scroll true
set scroll-full-overlap 0.01
set scroll-step 100
set recolor "true"
set default-bg "#1a1a1a"
set statusbar-bg "#1a1a1a" #01
set statusbar-fg "#73b3e7"
set inputbar-bg "1a1a1a"
set inputbar-fg "#73b3e7"
set index-bg "#252525"
set index-fg "#b7bec9"
set index-active-bg "#1a1a1a"
set index-active-fg "#73b3e7"

set recolor-lightcolor "#252525"
set recolor-darkcolor "#b7bec9"
set statusbar-h-padding 0
set statusbar-v-padding 0

set statusbar-home-tilde "true"

